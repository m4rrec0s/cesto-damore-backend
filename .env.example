# Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
DIRECT_URL=postgresql://user:password@host:5432/database?sslmode=require

# Google Firebase
GOOGLE_TYPE=service_account
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account
GOOGLE_UNIVERSE_DOMAIN=googleapis.com
FIREBASE_API_KEY=your-firebase-api-key

# Google Drive API (para customizações de pedidos)
# Caminho para o arquivo JSON com credenciais da Service Account
GOOGLE_DRIVE_CREDENTIALS_PATH=./google-drive-credentials.json
# ID da pasta raiz no Google Drive (deixe vazio para usar raiz do Drive)
GOOGLE_DRIVE_ROOT_FOLDER_ID=

# Mercado Pago
MERCADO_PAGO_PUBLIC_KEY="TEST-your-public-key"
MERCADO_PAGO_ACCESS_TOKEN="TEST-your-access-token"
MERCADO_PAGO_WEBHOOK_SECRET="your-webhook-secret"

# JWT
JWT_SECRET="your-super-secret-jwt-key"

# Upload
UPLOAD_DIR="./images"
MAX_FILE_SIZE="5242880"

# Server
BASE_URL="https://your-domain.com"
NODE_ENV=development

# Evolution API (WhatsApp)
EVOLUTION_API_URL=https://your-evolution-api.com
EVOLUTION_API_KEY=your-api-key
EVOLUTION_INSTANCE=YourInstance
WHATSAPP_GROUP_ID=your-group-id@g.us
