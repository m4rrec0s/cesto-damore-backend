generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  firebaseUId String?  @unique
  image_url   String?
  phone       String?
  address     String?
  city        String?
  state       String?
  zip_code    String?
  role                   String   @default("client")
  two_factor_code        String?
  two_factor_expires_at  DateTime?
  created_at             DateTime @default(now())
  updated_at  DateTime @updatedAt
  document    String?
  orders      Order[]
}

model Product {
  id                     String                 @id @default(uuid())
  name                   String
  description            String?
  price                  Float
  discount               Float?                 @default(0)
  stock_quantity         Int?
  is_active              Boolean                @default(true)
  image_url              String?
  allows_customization   Boolean                @default(false)
  created_at             DateTime               @default(now())
  updated_at             DateTime               @updatedAt
  type_id                String
  production_time        Int?                   @default(0)
  embedding              Unsupported("vector")?
  embedding_generated_at DateTime?              @db.Timestamp(6)
  orderItems             OrderItem[]
  type                   ProductType            @relation(fields: [type_id], references: [id])
  additionals            ProductAdditional[]
  categories             ProductCategory[]
  components             ProductComponent[]

  @@index([embedding], map: "idx_product_embedding")
  @@index([embedding], map: "product_embedding_idx")
}

model ProductType {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  products   Product[]
}

model Category {
  id       String            @id @default(uuid())
  name     String
  products ProductCategory[]
}

model ProductCategory {
  product_id  String
  category_id String
  created_at  DateTime @default(now())
  category    Category @relation(fields: [category_id], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@id([product_id, category_id])
}

model ProductAdditional {
  product_id    String
  additional_id String
  custom_price  Float?
  is_active     Boolean  @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  additional    Item     @relation(fields: [additional_id], references: [id])
  product       Product  @relation(fields: [product_id], references: [id])

  @@id([product_id, additional_id])
}

model Order {
  id                                String            @id @default(uuid())
  user_id                           String
  status                            OrderStatus       @default(PENDING)
  discount                          Float             @default(0)
  total                             Float             @map("total_price")
  delivery_address                  String?
  delivery_date                     DateTime?
  shipping_price                    Float?
  payment_method                    String?
  grand_total                       Float?
  recipient_phone                   String?
  created_at                        DateTime          @default(now())
  updated_at                        DateTime          @updatedAt
  complement                        String?
  send_anonymously                  Boolean?          @default(false)
  delivery_city                     String?
  delivery_state                    String?
  customizations_drive_processed    Boolean           @default(false)
  customizations_drive_processed_at DateTime?
  google_drive_folder_id            String?
  google_drive_folder_url           String?
  delivery_method                   String?           @default("delivery")
  user                              User              @relation(fields: [user_id], references: [id])
  items                             OrderItem[]
  payment                           Payment?
  personalizations                  Personalization[]
}

model OrderItem {
  id             String                   @id @default(uuid())
  order_id       String
  product_id     String
  quantity       Int
  price          Float
  order          Order                    @relation(fields: [order_id], references: [id])
  product        Product                  @relation(fields: [product_id], references: [id])
  additionals    OrderItemAdditional[]
  customizations OrderItemCustomization[]
}

model OrderItemAdditional {
  id            String    @id @default(uuid())
  order_item_id String
  additional_id String
  quantity      Int
  price         Float
  additional    Item      @relation(fields: [additional_id], references: [id])
  orderItem     OrderItem @relation(fields: [order_item_id], references: [id])
}

model Payment {
  id                  String        @id @default(uuid())
  order_id            String        @unique
  mercado_pago_id     String?       @unique
  preference_id       String?
  payment_method      String?
  payment_type        String?
  status              PaymentStatus @default(PENDING)
  transaction_amount  Float
  net_received_amount Float?
  fee_details         String?
  external_reference  String?
  webhook_attempts    Int           @default(0)
  last_webhook_at     DateTime?
  approved_at         DateTime?
  created_at          DateTime      @default(now())
  updated_at          DateTime      @updatedAt
  order               Order         @relation(fields: [order_id], references: [id])
}

model FinancialSummary {
  id                     String   @id @default(uuid())
  date                   DateTime @unique @db.Date
  total_sales            Float    @default(0)
  total_net_revenue      Float    @default(0)
  total_fees             Float    @default(0)
  total_orders           Int      @default(0)
  approved_orders        Int      @default(0)
  canceled_orders        Int      @default(0)
  pending_orders         Int      @default(0)
  total_products_sold    Int      @default(0)
  total_additionals_sold Int      @default(0)
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt
}

model WebhookLog {
  id                     String   @id @default(uuid())
  payment_id             String?
  topic                  String
  resource_id            String
  raw_data               String
  processed              Boolean  @default(false)
  error_message          String?
  created_at             DateTime @default(now())
  finalization_attempts  Int      @default(0)
  finalization_succeeded Boolean? @default(false)
}

model FeedConfiguration {
  id         String        @id @default(uuid())
  name       String
  is_active  Boolean       @default(true)
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt
  banners    FeedBanner[]
  sections   FeedSection[]
}

model FeedBanner {
  id                String            @id @default(uuid())
  feed_config_id    String
  title             String
  subtitle          String?
  image_url         String
  link_url          String?
  text_color        String?           @default("#FFFFFF")
  is_active         Boolean           @default(true)
  display_order     Int               @default(0)
  created_at        DateTime          @default(now())
  updated_at        DateTime          @updatedAt
  feedConfiguration FeedConfiguration @relation(fields: [feed_config_id], references: [id], onDelete: Cascade)
}

model FeedSection {
  id                String            @id @default(uuid())
  feed_config_id    String
  title             String
  section_type      FeedSectionType
  is_visible        Boolean           @default(true)
  display_order     Int               @default(0)
  created_at        DateTime          @default(now())
  updated_at        DateTime          @updatedAt
  feedConfiguration FeedConfiguration @relation(fields: [feed_config_id], references: [id], onDelete: Cascade)
  items             FeedSectionItem[]
}

model FeedSectionItem {
  id              String      @id @default(uuid())
  feed_section_id String
  item_type       String
  item_id         String
  display_order   Int         @default(0)
  is_featured     Boolean     @default(false)
  custom_title    String?
  custom_subtitle String?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @updatedAt
  feedSection     FeedSection @relation(fields: [feed_section_id], references: [id], onDelete: Cascade)
}

model LayoutBase {
  id               String            @id @default(uuid())
  name             String
  item_type        String
  image_url        String
  width            Int
  height           Int
  slots            Json
  created_at       DateTime          @default(now())
  updated_at       DateTime          @updatedAt
  additional_time  Int               @default(0)
  items            Item[]
  personalizations Personalization[]
}

model Personalization {
  id              String     @id @default(uuid())
  order_id        String
  item_id         String
  layout_base_id  String
  config_json     Json
  images          Json
  final_image_url String?
  created_at      DateTime   @default(now())
  item            Item       @relation(fields: [item_id], references: [id])
  layout_base     LayoutBase @relation(fields: [layout_base_id], references: [id])
  order           Order      @relation(fields: [order_id], references: [id], onDelete: Cascade)

  @@index([order_id])
  @@index([item_id])
}

model Item {
  id                   String                @id @default(uuid())
  name                 String
  description          String?
  type                 String                @default("outros")
  stock_quantity       Int                   @default(0)
  base_price           Float                 @default(0)
  discount             Float?                @default(0)
  image_url            String?
  allows_customization Boolean               @default(false)
  layout_base_id       String?
  created_at           DateTime              @default(now())
  updated_at           DateTime              @updatedAt
  customizations       Customization[]
  layout_base          LayoutBase?           @relation(fields: [layout_base_id], references: [id])
  orderItems           OrderItemAdditional[]
  personalizations     Personalization[]
  additionals          ProductAdditional[]
  components           ProductComponent[]
}

model Customization {
  id                     String                   @id @default(uuid())
  name                   String
  description            String?
  item_id                String
  price                  Float                    @default(0)
  isRequired             Boolean                  @default(false)
  type                   CustomizationType
  customization_data     Json
  created_at             DateTime                 @default(now())
  updated_at             DateTime                 @updatedAt
  item                   Item                     @relation(fields: [item_id], references: [id], onDelete: Cascade)
  OrderItemCustomization OrderItemCustomization[]
}

model Layout {
  id          String   @id @default(uuid())
  item_id     String
  name        String
  image_url   String
  layout_data Json
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([item_id])
}

model ItemConstraint {
  id                String   @id @default(uuid())
  target_item_id    String
  target_item_type  String
  target_item_name  String?
  related_item_id   String
  related_item_type String
  related_item_name String?
  constraint_type   String   @default("REQUIRES")
  message           String?
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@index([target_item_id])
  @@index([related_item_id])
}

model ProductComponent {
  id         String   @id @default(uuid())
  product_id String
  item_id    String
  quantity   Int      @default(1)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  item       Item     @relation(fields: [item_id], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@unique([product_id, item_id])
  @@index([product_id])
  @@index([item_id])
}

model OrderItemCustomization {
  id                     String         @id @default(uuid())
  order_item_id          String
  customization_id       String?
  value                  String
  google_drive_folder_id String?
  google_drive_url       String?
  created_at             DateTime       @default(now())
  updated_at             DateTime       @updatedAt
  additional_time_hours  Int            @default(0)
  customization          Customization? @relation(fields: [customization_id], references: [id])
  orderItem              OrderItem      @relation(fields: [order_item_id], references: [id], onDelete: Cascade)

  @@unique([order_item_id, customization_id], name: "order_item_id_customization_id")
}

model AIAgentSession {
  id             String           @id @default(uuid())
  user_id        String?
  customer_phone String?
  is_blocked     Boolean          @default(false)
  expires_at     DateTime
  created_at     DateTime         @default(now())
  messages       AIAgentMessage[]

  @@unique([customer_phone])
}

model AIAgentMessage {
  id           String         @id @default(uuid())
  session_id   String
  role         String // 'user', 'assistant', 'system', 'tool'
  content      String
  name         String? // For tool names
  tool_call_id String?
  tool_calls   String? // Store JSON array of tool calls for assistant role
  created_at   DateTime       @default(now())
  session      AIAgentSession @relation(fields: [session_id], references: [id], onDelete: Cascade)

  @@index([session_id])
}

model CustomerMemory {
  id             String   @id @default(uuid())
  customer_phone String   @unique
  summary        String
  updated_at     DateTime @updatedAt
  expires_at     DateTime // 15 days from update
}

model n8n_vectors {
  id        String                 @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  text      String?
  metadata  Json?
  embedding Unsupported("vector")?
}

model Holiday {
  id             String   @id @default(uuid())
  name           String
  start_date     DateTime @db.Date
  end_date       DateTime @db.Date
  closure_type   String   @default("full_day") // 'full_day' ou 'custom'
  duration_hours Int? // Se closure_type = 'custom'
  description    String?
  is_active      Boolean  @default(true)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  @@index([start_date])
}

model AISessionProductHistory {
  id           String   @id @default(uuid())
  session_id   String
  product_id   String
  sent_count   Int      @default(1)
  last_sent_at DateTime @default(now())
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@unique([session_id, product_id])
  @@index([session_id])
}

model AISummary {
  id            String   @id @default(uuid())
  summary       String   @db.Text
  period_start  DateTime
  period_end    DateTime
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

enum PaymentStatus {
  PENDING
  APPROVED
  AUTHORIZED
  IN_PROCESS
  IN_MEDIATION
  REJECTED
  CANCELLED
  REFUNDED
  CHARGED_BACK
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

enum FeedSectionType {
  RECOMMENDED_PRODUCTS
  DISCOUNTED_PRODUCTS
  FEATURED_CATEGORIES
  FEATURED_ADDITIONALS
  CUSTOM_PRODUCTS
  NEW_ARRIVALS
  BEST_SELLERS
}

enum CustomizationType {
  BASE_LAYOUT
  TEXT
  IMAGES
  MULTIPLE_CHOICE
}
