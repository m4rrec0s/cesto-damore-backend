generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  firebaseUId String?  @unique
  image_url   String?
  phone       String?
  address     String?
  city        String?
  state       String?
  zip_code    String?
  role        String   @default("client")
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  orders Order[]
}

model Product {
  id                   String   @id @default(uuid())
  name                 String
  description          String?
  price                Float
  discount             Float?   @default(0)
  stock_quantity       Int?
  is_active            Boolean  @default(true)
  image_url            String?
  allows_customization Boolean  @default(false) // Se permite customização
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt

  type_id String
  type    ProductType @relation(fields: [type_id], references: [id])

  orderItems         OrderItem[]
  additionals        ProductAdditional[]
  categories         ProductCategory[]
  customizationRules ProductCustomization[]
}

model ProductType {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}

model Category {
  id       String            @id @default(uuid())
  name     String
  products ProductCategory[]
}

model ProductCategory {
  product_id  String
  category_id String
  created_at  DateTime @default(now())

  product  Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)
  category Category @relation(fields: [category_id], references: [id], onDelete: Cascade)

  @@id([product_id, category_id]) // PK composta
}

model Colors {
  id         String   @id @default(uuid())
  name       String
  hex_code   String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  additionals AdditionalColor[]
}

model Additional {
  id                   String  @id @default(uuid())
  name                 String
  description          String?
  price                Float // Preço base (venda separada)
  discount             Float?  @default(0)
  image_url            String?
  stock_quantity       Int?    @default(0) // Estoque total do adicional
  allows_customization Boolean @default(false) // Se permite customização

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  colors             AdditionalColor[]
  products           ProductAdditional[]
  orderItems         OrderItemAdditional[]
  customizationRules AdditionalCustomization[]
}

model AdditionalColor {
  additional_id  String
  color_id       String
  stock_quantity Int      @default(0) // Estoque específico desta cor
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  additional Additional @relation(fields: [additional_id], references: [id], onDelete: Cascade)
  color      Colors     @relation(fields: [color_id], references: [id], onDelete: Cascade)

  @@id([additional_id, color_id]) // PK composta
}

model ProductAdditional {
  product_id    String
  additional_id String
  custom_price  Float? // Preço quando vendido como adicional deste produto
  is_active     Boolean  @default(true)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  product    Product    @relation(fields: [product_id], references: [id])
  additional Additional @relation(fields: [additional_id], references: [id])

  @@id([product_id, additional_id]) // PK composta
}

model Order {
  id               String      @id @default(uuid())
  user_id          String
  status           OrderStatus @default(PENDING)
  discount         Float       @default(0)
  total            Float       @map("total_price")
  delivery_address String?
  delivery_date    DateTime?
  shipping_price   Float?
  payment_method   String?
  grand_total      Float?
  created_at       DateTime    @default(now())
  updated_at       DateTime    @updatedAt

  user    User        @relation(fields: [user_id], references: [id])
  items   OrderItem[]
  payment Payment?
}

model OrderItem {
  id         String @id @default(uuid())
  order_id   String
  product_id String
  quantity   Int
  price      Float

  order   Order   @relation(fields: [order_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])

  additionals    OrderItemAdditional[]
  customizations OrderItemCustomization[]
}

model OrderItemAdditional {
  id            String @id @default(uuid())
  order_item_id String
  additional_id String
  quantity      Int
  price         Float

  orderItem  OrderItem  @relation(fields: [order_item_id], references: [id])
  additional Additional @relation(fields: [additional_id], references: [id])
}

model Payment {
  id                  String        @id @default(uuid())
  order_id            String        @unique
  mercado_pago_id     String?       @unique // ID do pagamento no Mercado Pago
  preference_id       String? // ID da preferência de pagamento
  payment_method      String? // Método de pagamento usado
  payment_type        String? // Tipo de pagamento (credit_card, debit_card, etc.)
  status              PaymentStatus @default(PENDING)
  transaction_amount  Float
  net_received_amount Float? // Valor líquido recebido (após taxas)
  fee_details         String? // Detalhes das taxas (JSON)
  external_reference  String? // Referência externa
  webhook_attempts    Int           @default(0)
  last_webhook_at     DateTime?
  approved_at         DateTime?
  created_at          DateTime      @default(now())
  updated_at          DateTime      @updatedAt

  order Order @relation(fields: [order_id], references: [id])
}

model FinancialSummary {
  id                     String   @id @default(uuid())
  date                   DateTime @unique @db.Date // Data do resumo (por dia)
  total_sales            Float    @default(0) // Total de vendas do dia
  total_net_revenue      Float    @default(0) // Receita líquida (após taxas)
  total_fees             Float    @default(0) // Total de taxas pagas
  total_orders           Int      @default(0) // Número de pedidos
  approved_orders        Int      @default(0) // Pedidos aprovados
  canceled_orders        Int      @default(0) // Pedidos cancelados
  pending_orders         Int      @default(0) // Pedidos pendentes
  total_products_sold    Int      @default(0) // Total de produtos vendidos
  total_additionals_sold Int      @default(0) // Total de adicionais vendidos
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt
}

model WebhookLog {
  id            String   @id @default(uuid())
  payment_id    String? // ID do pagamento relacionado
  topic         String // Tópico do webhook (payment, merchant_order, etc.)
  resource_id   String // ID do recurso
  raw_data      String // Dados brutos do webhook (JSON)
  processed     Boolean  @default(false)
  error_message String?
  created_at    DateTime @default(now())
}

enum PaymentStatus {
  PENDING // Pendente
  APPROVED // Aprovado
  AUTHORIZED // Autorizado
  IN_PROCESS // Em processamento
  IN_MEDIATION // Em mediação
  REJECTED // Rejeitado
  CANCELLED // Cancelado
  REFUNDED // Reembolsado
  CHARGED_BACK // Chargeback
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

// ================ FEED CONFIGURATION MODELS ================

model FeedConfiguration {
  id         String   @id @default(uuid())
  name       String // Nome da configuração (ex: "Home Page Feed")
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  banners  FeedBanner[]
  sections FeedSection[]
}

model FeedBanner {
  id             String   @id @default(uuid())
  feed_config_id String
  title          String
  subtitle       String?
  image_url      String
  link_url       String? // URL para onde o banner leva quando clicado
  text_color     String?  @default("#FFFFFF") // Cor do texto
  is_active      Boolean  @default(true)
  display_order  Int      @default(0) // Ordem de exibição
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  feedConfiguration FeedConfiguration @relation(fields: [feed_config_id], references: [id], onDelete: Cascade)
}

model FeedSection {
  id             String          @id @default(uuid())
  feed_config_id String
  title          String // Título da seção (ex: "Produtos Recomendados")
  section_type   FeedSectionType // Tipo da seção
  is_visible     Boolean         @default(true) // Se a seção está visível
  display_order  Int             @default(0) // Ordem de exibição
  max_items      Int             @default(6) // Máximo de itens nesta seção
  created_at     DateTime        @default(now())
  updated_at     DateTime        @updatedAt

  feedConfiguration FeedConfiguration @relation(fields: [feed_config_id], references: [id], onDelete: Cascade)
  items             FeedSectionItem[]
}

model FeedSectionItem {
  id              String   @id @default(uuid())
  feed_section_id String
  item_type       String // "product", "category", "additional"
  item_id         String // ID do produto, categoria ou adicional
  display_order   Int      @default(0)
  is_featured     Boolean  @default(false) // Se é item em destaque
  custom_title    String? // Título customizado para o item
  custom_subtitle String? // Subtítulo customizado
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  feedSection FeedSection @relation(fields: [feed_section_id], references: [id], onDelete: Cascade)
}

enum FeedSectionType {
  RECOMMENDED_PRODUCTS // Produtos recomendados
  DISCOUNTED_PRODUCTS // Produtos com desconto
  FEATURED_CATEGORIES // Categorias em destaque
  FEATURED_ADDITIONALS // Adicionais em destaque
  CUSTOM_PRODUCTS // Produtos customizados pelo admin
  NEW_ARRIVALS // Novos produtos
  BEST_SELLERS // Mais vendidos
}

// ================ CUSTOMIZATION MODELS ================

enum CustomizationType {
  PHOTO_UPLOAD // Upload de fotos (ex: fotos para quadro)
  ITEM_SUBSTITUTION // Substituição de item (ex: urso por chaveiro)
  TEXT_INPUT // Texto personalizado (ex: frase no chocolate)
  MULTIPLE_CHOICE // Escolha múltipla (ex: estilos de layout)
}

model ProductCustomization {
  id                 String            @id @default(uuid())
  product_id         String
  customization_type CustomizationType
  title              String // Ex: "Fotos do Quadro", "Escolha o Item"
  description        String? // Descrição/instrução para o cliente
  is_required        Boolean           @default(false) // Se é obrigatório customizar
  max_items          Int?              @default(1) // Máximo de itens (fotos, textos, etc)
  available_options  String? // JSON com opções disponíveis (para substitution/multiple_choice)
  preview_image_url  String? // Imagem de preview do layout/item
  display_order      Int               @default(0)
  created_at         DateTime          @default(now())
  updated_at         DateTime          @updatedAt

  product Product @relation(fields: [product_id], references: [id], onDelete: Cascade)
}

model AdditionalCustomization {
  id                 String            @id @default(uuid())
  additional_id      String
  customization_type CustomizationType
  title              String
  description        String?
  is_required        Boolean           @default(false)
  max_items          Int?              @default(1)
  available_options  String? // JSON
  preview_image_url  String?
  display_order      Int               @default(0)
  created_at         DateTime          @default(now())
  updated_at         DateTime          @updatedAt

  additional Additional @relation(fields: [additional_id], references: [id], onDelete: Cascade)
}

model OrderItemCustomization {
  id                     String            @id @default(uuid())
  order_item_id          String
  customization_rule_id  String? // ID da regra de customização (ProductCustomization ou AdditionalCustomization)
  customization_type     CustomizationType
  title                  String // Título da customização
  customization_data     String // JSON com dados da customização (URLs das imagens temp, texto, escolha, etc)
  google_drive_folder_id String? // ID da pasta no Google Drive (preenchido após upload)
  google_drive_url       String? // URL pública da pasta
  created_at             DateTime          @default(now())
  updated_at             DateTime          @updatedAt

  orderItem OrderItem @relation(fields: [order_item_id], references: [id], onDelete: Cascade)
}

model TemporaryCustomizationFile {
  id              String   @id @default(uuid())
  session_id      String // ID da sessão do cliente (localStorage/cookie)
  original_name   String
  stored_filename String // Nome do arquivo salvo temporariamente
  file_path       String // Caminho completo do arquivo temp
  mime_type       String
  size            Int // Tamanho em bytes
  expires_at      DateTime // Data de expiração do arquivo temp
  created_at      DateTime @default(now())

  @@index([session_id])
  @@index([expires_at])
}
